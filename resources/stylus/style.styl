$font-family-sans-serif = 'Poppins', sans-serif
$font-family-serif = $font-family-sans-serif

@import bootstrap

@import url('https://fonts.googleapis.com/css?family=Poppins:200,300,400,600')

.header
  position relative
  height 100vh
  background-image url('../images/header-background.jpeg')
  background-size cover
  background-position center
  overflow hidden
  color white
  .title
    position absolute
    left 100px
    top 20vh
    h1, h2
      margin 0
    h1
      font-size 84px
      letter-spacing -2px
      strong
        opacity .95
    h2
      font-size 22px
      letter-spacing 8px
      padding-left 4px
      @extend .text-uppercase

.section
  padding 100px 0
  color #333
  h3, h4
    font-weight 600
    color #000
  h3
    font-size 38px
    margin 0 0 30px 0
    small
      display block
      font-size 14px
      line-height 1.2
      color #999
  h4
    font-size 28px
  p
    color #666
    font-size 14px
    line-height 24px
    letter-spacing 0.3px

.about
  // Styles here

.resume
  background rgba(#ccc, 1/5)
  h4
    margin 45px 0 40px
  dl
    dt
      @extend .text-uppercase

.portfolio
  .grid-companies
    margin 80px 0
    & > div
      @extend .text-center
    img
      height 40px

.contact
  background rgba(#000, .3)

// Print version
@media print
  .header
    height auto
    padding 50px 0
    .title
      text-align center
      position static
  .section
    padding 50px 0